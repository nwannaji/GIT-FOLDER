        <Label  x:Name="lblTimeCount" Content="00:00:00" HorizontalAlignment="Center" Foreground="Blue" FontSize="48" FontWeight="Bold" Margin="433,99,387,0" VerticalAlignment="Top" Width="330" Grid.Column="2" Height="104" />
